--Arthmetic operations 
select empname ,salary,salary*0.4,salary*0.1 , salary+(salary*0.4)-(Salary*0.1) from emp ;
alter table emp
add allowences varchar(20);
alter table emp
add fundcuts varchar(29);
alter table emp
add netsalary varchar(20);
select *from emp;
update emp set allowences =salary*0.4;
update emp set fundcuts=salary*0.1;
update emp set netsalary=salary+(salary*0.4)-(Salary*0.1);
select *from emp;

pseudo Alias super easy TIP : with using alter and update commands also we can insert column name for above rows 
select empname ,salary,
salary*0.4 as allowence,
salary*0.1 as fundcuts, 
salary+(salary*0.4)-(Salary*0.1)as netsalary
from emp ;

distinct - used to delete duplicate values from the table
example : select distinct years from emp;

working with null values - null values are not zeros
select empname, years from emp where years is null or years=-1;



